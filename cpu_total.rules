node_cpu_total = sum(node_cpu) by (cpu)
node_cpu_total_in = sum(node_cpu) by (instance)
node_cpu_total_avg = sum(rate(node_cpu{mode!='idle',mode!="iowait"}[1m]) or irate(node_cpu{mode!='idle',mode!="iowait"}[5m])) by (instance) / count(node_cpu{mode="user"}) by (instance) * 100
node_cpu_total_avg_system = avg(sum(rate(node_cpu{mode!='idle',mode!="iowait"}[1m]) or irate(node_cpu{mode!='idle',mode!="iowait"}[5m])) by (instance) / count(node_cpu{mode="user"}) by (instance) * 100 or (avg_over_time(node_cpu_average{mode='total'}[1m]) or avg_over_time(node_cpu_average{mode='total'}[5m])))
